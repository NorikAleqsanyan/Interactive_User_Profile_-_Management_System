<h1 class="text-center mt-5 mb-4" style="color: #ff6f61;">Sign Up</h1>

<div class="container d-flex justify-content-center">
  <div class="card shadow-lg" style="width: 30rem; border-radius: 15px;">
    <div class="card-body" style="background-color: #f9f9f9;">
      <h5 class="card-title text-center mb-4" style="color: #ff6f61;">Create Your Account</h5>
      {{#if err}}
        <div class="alert alert-danger" role="alert">
          {{err}}
        </div>
      {{/if}}
      <form action="/register" method="post">
        <div class="mb-3">
          <label for="name" class="form-label" style="color: #6f42c1;">Name</label>
          <input class="form-control" type="text" name="name" placeholder="Enter your name" required>
        </div>

        <div class="mb-3">
          <label for="surname" class="form-label" style="color: #6f42c1;">Surname</label>
          <input class="form-control" type="text" name="surname" placeholder="Enter your surname" required>
        </div>

        <div class="mb-3">
          <label for="age" class="form-label" style="color: #6f42c1;">Age</label>
          <input class="form-control" type="number" name="age" placeholder="Enter your age" required>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label" style="color: #6f42c1;">Email</label>
          <input class="form-control" type="email" name="email" placeholder="Enter your email" required>
        </div>

        <div class="mb-3">
          <label for="role" class="form-label" style="color: #6f42c1;">Role</label>
          <select class="form-control" name="role">
            <option value="0">User</option>
            <option value="1">Manager</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label" style="color: #6f42c1;">Password</label>
          <input class="form-control" type="password" name="password" placeholder="Create a password" required>
        </div>

        <div class="mb-3">
          <label for="confirmpassword" class="form-label" style="color: #6f42c1;">Confirm Password</label>
          <input class="form-control" type="password" name="confirmpassword" placeholder="Confirm your password" required>
        </div>

        <button type="submit" class="btn btn-danger w-100 mt-4" style="font-size: 16px; padding: 12px;">Sign Up</button>
      </form>

      <div class="mt-4 text-center">
        <p style="color: #ff6f61;">Already have an account? <a href="/" class="text-decoration-none" style="color: #007bff;">Login here</a></p>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #e9ecef;
  }

  .card {
    border-radius: 15px;
    box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
  }

  .card-body {
    padding: 30px;
  }

  h1, h5 {
    font-family: 'Roboto', sans-serif;
    font-weight: 600;
  }

  .alert {
    margin-bottom: 20px;
  }

  .btn {
    font-size: 16px;
    padding: 12px;
    background-color: #ff6f61;
    border-color: #ff6f61;
  }

  .btn:hover {
    background-color: #e65c4a;
    border-color: #e65c4a;
  }

  a {
    color: #007bff;
  }

  a:hover {
    text-decoration: underline;
  }

  .form-label {
    font-weight: 500;
  }
</style>
